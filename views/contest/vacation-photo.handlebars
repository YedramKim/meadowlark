<form role="form" class="form-horizontal" enctype="multipart/form-data" method="post" action="/contest/vacation-photo/{{year}}/{{month}}">
	<div class="form-group">
		<label for="filedName" class="col-sm-2 control-label">Name</label>
		<div class="col-sm-4">
			<input type="text" name="name" id="filedName" required class="form-control">
		</div>
	</div>
	<div class="form-group">
		<label for="filedEmail" class="col-sm-2 control-label">Email</label>
		<div class="col-sm-4">
			<input type="email" name="email" id="filedEmail" require class="form-control">
		</div>
	</div>
	<div class="form-group">
		<label for="filedPhoto" class="col-sm-2 control-label">Vacation Photo</label>
		<div class="col-sm-4">
			<span class="btn btn-default btn-file">
				upload
				<input type="file" name="photo" id="filedPhoto" required class="form-control" accept="image/*" data-url="/upload">
			</span>
			<div id="fileUploads"></div>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-4">
			<button type="submit" class="btn btn-primary">Submit</button>
		</div>
	</div>
</form>

{{#section 'jQuery'}}
	<script src="/vendor/jqfu/js/vendor/jquery.ui.widget.js"></script>
	<script src="/vendor/jqfu/js/jquery.iframe-transport.js"></script>
	<script src="/vendor/jqfu/js/jquery.fileupload.js"></script>
	<script>
	$(function(){
		$('#filedPhoto').fileupload({
			dataType : 'json',
			done : function(e, data){
				$.each(data.result.files, function(index, file){
					$('#fileUploads').append($('<div class="upload"><span class="glyphicon glyphicon-ok"></span>&nbsp;'+file.originalName+'</div>'));
					console.log(file);
				})
			}
		});
	});
	</script>
{{/section}}